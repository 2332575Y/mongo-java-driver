<FindBugsFilter>
    <Match>
        <Package name="~com\.google\.code\.morphia.*"/>
    </Match>

    <Match>
        <Class name="org.bson.JSONWriterSettings"/>
    </Match>

    <Match>
        <Class name="com.mongodb.serializers.DocumentSerializer">
            <Bug pattern="NM_SAME_SIMPLE_NAME_AS_SUPERCLASS" />
        </Class>
    </Match>

    <Match>
        <Class name="org.mongodb.acceptancetest.AcceptanceTestCase">
            <Bug code="MS"/>
        </Class>
        <Class name="org.mongodb.DatabaseTestCase">
            <Bug code="MS"/>
        </Class>
    </Match>

    <!-- All bugs in test classes, except for JUnit-specific bugs -->
    <Match>
        <Class name="~.*\.*Test"/>
        <Not>
            <Bug code="IJU"/>
        </Not>
    </Match>

</FindBugsFilter>
